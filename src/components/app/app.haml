%dom-module#senpai-app
  %template
    %style{include: 'iron-flex'}

    / inject-style src="app/app.css"

    %iron-pages#screens.flex.layout.vertical{selectable: '.screen', 'attr-for-selected': 'screen-name', selected: 'loading'}
      %senpai-loading-screen.screen.flex{'screen-name': 'loading'}
      %senpai-opening-screen.screen.flex{'screen-name': 'opening'}

  %script{src: 'app.js'}
